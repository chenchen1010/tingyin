{
  "name": "audio-transcribe-app",
  "version": "1.0.0",
  "description": "音频转录桌面应用",
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"npx wait-on http://localhost:3001 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "dev": "concurrently -k \"cross-env BROWSER=none PORT=3001 npm start\" \"npx wait-on tcp:3001 && electron .\"",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.chenchen1010.audio-transcribe",
    "productName": "音频转录",
    "asar": false,
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "public/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "src/core",
        "to": "app/core",
        "filter": [
          "**/*.py"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dir",
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "darkModeSupport": true
    }
  },
  "author": "chenchen1010",
  "license": "MIT",
  "dependencies": {
    "@mantine/core": "^7.0.0",
    "@mantine/hooks": "^7.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "iconv-lite": "^0.6.3",
    "python-shell": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "config": {
    "electron_mirror": "https://npmmirror.com/mirrors/electron/",
    "electron_builder_binaries_mirror": "https://npmmirror.com/mirrors/electron-builder-binaries/"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./",
  "resolutions": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11"
  }
}
